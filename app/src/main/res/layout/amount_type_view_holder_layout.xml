<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/amountTypeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/deleteAmountTypeButton"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="0dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/baseline_delete_forever_24"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/amountTypeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/amountTypeTextView" />

    <ImageButton
        android:id="@+id/modifyAmountTypeButton"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/baseline_mode_24"
        app:layout_constraintBottom_toBottomOf="@+id/amountTypeTextView"
        app:layout_constraintEnd_toStartOf="@+id/deleteAmountTypeButton"
        app:layout_constraintTop_toTopOf="@+id/amountTypeTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>