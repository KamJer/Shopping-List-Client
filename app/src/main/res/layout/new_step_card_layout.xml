<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <EditText
        android:id="@+id/et_step_number_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autofillHints=""
        android:gravity="start"
        android:hint="@string/step_number_hint"
        android:inputType="number"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_step_instruction_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:autofillHints=""
        android:gravity="start"
        android:hint="@string/step_desc_hint"
        android:inputType="text"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/delete_step_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:background="@drawable/baseline_delete_forever_24" />
</LinearLayout>